<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TableLayout
        android:id="@+id/private_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView20"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Приват Банк"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/buttonCPB"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@mipmap/ic_launcher_round"
                tools:srcCompat="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="24 июля 2019 г"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp">

            <TextView

                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:text="Валюта"
                android:textSize="18sp" />

            <TextView

                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Покупка"
                android:textSize="18sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Продажа"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:id="@+id/USDTableRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:onClick="lightUSD">

            <TextView

                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:text="USD"
                android:textSize="18sp" />

            <TextView

                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView

                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="TextView"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:id="@+id/EURTableRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:onClick="lightEUR">

            <TextView

                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:text="EUR"
                android:textSize="18sp" />

            <TextView

                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView

                android:id="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="TextView"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:id="@+id/RUBTableRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:onClick="lightRUB">

            <TextView

                android:layout_width="138dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:text="RUB"
                android:textSize="18sp" />

            <TextView

                android:id="@+id/t5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView

                android:id="@+id/t6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:text="TextView"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">


            <TextView

                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="НБУ"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/buttonNBU"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@mipmap/ic_launcher_round"
                tools:srcCompat="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/nbuDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="24 июля 2019 г"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp">

            <TextView

                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:text="Валюта"
                android:textSize="18sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Покупка"
                android:textSize="18sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Продажа"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>

    <ScrollView
        android:id="@+id/scrl"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:scrollbarStyle="outsideInset">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:id="@+id/scrollRUB"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp">

                    <TextView

                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        android:text="RUB"
                        android:textSize="18sp" />

                    <TextView

                        android:id="@+id/t7"
                        android:layout_width="121dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="TextView"
                        android:textSize="18sp" />

                    <TextView

                        android:id="@+id/t8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="TextView"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp">

                    <TextView

                        android:layout_width="137dp"
                        android:layout_height="wrap_content"
                        android:text="CAD"
                        android:textSize="18sp" />

                    <TextView

                        android:id="@+id/t9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="TextView"
                        android:textSize="18sp" />

                    <TextView

                        android:id="@+id/t10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="TextView"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/scrollUSD"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp">

                    <TextView

                        android:layout_width="137dp"
                        android:layout_height="wrap_content"
                        android:text="USD"
                        android:textSize="18sp" />

                    <TextView

                        android:id="@+id/t11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="TextView"
                        android:textSize="18sp" />

                    <TextView

                        android:id="@+id/t12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="TextView"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp">

                    <TextView

                        android:layout_width="137dp"
                        android:layout_height="wrap_content"
                        android:text="HUF"
                        android:textSize="18sp" />

                    <TextView

                        android:id="@+id/t13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="TextView"
                        android:textSize="18sp" />

                    <TextView

                        android:id="@+id/t14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="TextView"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/scrollEUR"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp">

                    <TextView

                        android:layout_width="137dp"
                        android:layout_height="wrap_content"
                        android:text="EUR"
                        android:textSize="18sp" />

                    <TextView

                        android:id="@+id/t15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="TextView"
                        android:textSize="18sp" />

                    <TextView

                        android:id="@+id/t16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="TextView"
                        android:textSize="18sp" />
                </TableRow>


            </TableLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
